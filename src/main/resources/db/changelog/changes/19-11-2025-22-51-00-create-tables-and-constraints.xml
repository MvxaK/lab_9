<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="create-countries-table" author="CrystaliK">
        <createTable tableName="countries">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_countries"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="code" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-items-table" author="CrystaliK">
        <createTable tableName="items">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_items"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="price" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="manufacturer_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="create-items-table-foreign-key-manufacturer-id" author="CrystaliK">
        <addForeignKeyConstraint baseColumnNames="manufacturer_id" baseTableName="items"
                                 constraintName="FK_ITEMS_ON_MANUFACTURER" referencedColumnNames="id"
                                 referencedTableName="countries"/>
    </changeSet>

</databaseChangeLog>